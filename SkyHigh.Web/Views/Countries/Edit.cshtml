@model SkyHigh.Models.Countries.CountryEditInputModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit a country</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="CurrentName" class="control-label"></label>
                <input asp-for="CurrentName" class="form-control" disabled />
                <input asp-for="CurrentName" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="NewName" class="control-label"></label>
                <input asp-for="NewName" class="form-control" />
                <span asp-validation-for="NewName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
